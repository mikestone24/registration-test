%section.pagecontainer{:class => "container-fluid text-center"}
  .div.topp 
    %h2.signup Sign Up
    .div.haveaccount 
      Have an account? 
      =link_to "Log in.", new_user_session_path
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  
    .form-inputs
      = f.input :first_name, :placeholder => 'First Name', input_html:{:class => 'user_input'}
      = f.input :last_name, :placeholder => "Last Name" , input_html:{:class => 'user_input'}
      = f.input :email, :placeholder => "Email Address" , input_html:{:class => 'email_input'}
      = f.input :mobile_number, :placeholder => "Mobile" , input_html:{:class => 'mobile_input'}
      = f.input :password, :placeholder => "Password" , input_html:{:class => 'password_input'}
    .form-actions
      = f.button :submit, "Next" , :class =>"btn btn-primary btn-md "
